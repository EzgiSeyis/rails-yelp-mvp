<div class="header">
<h1>All Restaurants</h1>
<%= link_to "Add a new restaurant", new_restaurant_path, class:"btn btn-primary mybutton"%>
</div>

<ul>
<% @restaurants.each do |restaurant| %>
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
  <li><%= restaurant.address %></li>
  <li><%= restaurant.phone_number %></li>
  <li><%= restaurant.category %></li>
<% end %>
</ul>
